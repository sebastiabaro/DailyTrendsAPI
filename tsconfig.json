{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,

        "outDir": "./dist",
        "rootDir": "./src"
    },
    "include": ["src/**/*.ts", "src/app"],
    "exclude": ["src/**/*.test.ts"]
}
